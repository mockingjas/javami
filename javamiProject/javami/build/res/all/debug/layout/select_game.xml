<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".SelectGame">

<ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_handwriting"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="145dp"
        android:src="@android:drawable/ic_input_get"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="start_handwriting_game"/>

<ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_search_sort"
        android:layout_alignBottom="@+id/button_handwriting"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_search_category_default"
        android:onClick="start_search_sort_game"/>

<ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_memory"
        android:src="@android:drawable/stat_notify_sync"
        android:layout_alignBottom="@+id/button_search_sort"
        android:layout_alignParentRight="true"
        android:layout_marginRight="131dp"
        android:onClick="start_memory_game"/>

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="School/handwriting"
        android:id="@+id/label_school"
        android:layout_above="@+id/button_search_sort"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="61dp"
        android:layout_marginBottom="26dp"/>

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="House/Searching and sorting"
        android:id="@+id/label_house"
        android:layout_alignBottom="@+id/label_school"
        android:layout_centerHorizontal="true"/>

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Playground/memory"
        android:id="@+id/label_playground"
        android:layout_alignBottom="@+id/label_house"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"/>
</RelativeLayout>
